<h2>Treasurer</h2>

<% if @treasurer.present? %>
  <p>
    <b>Name prefix:</b>
    <%= @treasurer.name_prefix %>
  </p>

  <p>
    <b>Name first:</b>
    <%= @treasurer.name_first %>
  </p>

  <p>
    <b>Name mi:</b>
    <%= @treasurer.name_mi %>
  </p>

  <p>
    <b>Name nick:</b>
    <%= @treasurer.name_nick %>
  </p>

  <p>
    <b>Name last:</b>
    <%= @treasurer.name_last %>
  </p>

  <p>
    <b>Name suffix:</b>
    <%= @treasurer.name_suffix %>
  </p>

  <p>
    <b>Address street:</b>
    <%= @treasurer.address_street %>
  </p>

  <p>
    <b>Address suite:</b>
    <%= @treasurer.address_suite %>
  </p>

  <p>
    <b>Address city:</b>
    <%= @treasurer.address_city %>
  </p>

  <p>
    <b>Address state:</b>
    <%= @treasurer.address_state %>
  </p>

  <p>
    <b>Address zip:</b>
    <%= @treasurer.address_zip %>
  </p>

  <p>
    <b>Address changed:</b>
    <%= @treasurer.address_changed %>
  </p>

  <p>
    <b>Phone:</b>
    <%= @treasurer.phone %>
  </p>
<% else %>
  <p>Treasurer information has not been added, yet.</p>
<% end %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_filers_path(@user), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_filer_path(@user, @filer), :class => 'btn' %>
  <% if @treasurer.present? %>
    <%= link_to 'Edit Treasurer', edit_user_filer_treasurer_path(@user, @filer, @treasurer), :class => 'btn' %>
  <% else %>
    <%= link_to 'Add Treasurer', user_filer_treasurers_path(@user, @filer), :class => 'btn' %>
  <% end %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_filer_path(@user, @filer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

