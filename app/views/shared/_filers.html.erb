<legend>Your Filers</legend>

<% if @filers.present? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Filer type</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @filers.each do |filer| %>
      <tr>
        <td><%= filer.filer_type %></td>
        <td><%= filer.name_first %></td>
        <td><%= filer.name_last %></td>
        <td>
          <%= link_to 'Show details', user_filer_path(@user, filer) %>
          <%= link_to 'Edit', edit_user_filer_path(@user, filer), :class => 'btn btn-mini' %>
          <% if filer.treasurer.present? %>
            <%= link_to 'Edit Treasurer', edit_user_filer_treasurer_path(@user, filer, filer.treasurer), 
              :class => 'btn btn-mini' %>
          <% else %>
            <%= link_to 'Add Treasurer', new_user_filer_treasurer_path(@user, filer), 
              :class => 'btn btn-mini' %>
          <% end %>
          <%= link_to 'Delete', user_filer_path(@user, filer), :method => :delete, 
            :confirm => 'Are you sure you want to delete this filer? The action cannot be undone.', 
            :class => 'btn btn-mini btn-danger' %>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>You haven't added any filers, yet.</p>
<% end %>

<br />

